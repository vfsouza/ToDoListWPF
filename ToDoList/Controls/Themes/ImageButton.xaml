<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ToDoList.Controls">


    <Style TargetType="{x:Type local:ImageButton}"
		   BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ImageButton}">
					<Image Width="{TemplateBinding Width}">
						<Image.Style>
							<Style>
								<Setter Property="Image.Source"
										Value="{Binding Image, RelativeSource={RelativeSource TemplatedParent}}" />
								<Style.Triggers>
									<Trigger  Property="Image.IsMouseOver"
											  Value="True">
										<Setter Property="Image.Source"
												Value="{Binding HoverImage, RelativeSource={RelativeSource TemplatedParent}}" />
									</Trigger>
								</Style.Triggers>
							</Style>
						</Image.Style>
					</Image>
				</ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
